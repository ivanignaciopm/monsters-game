import random
import datetime
import time
its_day = True
total_territory = 100
monsters = []
humans = []
teams = {}

class Monster:
  # if a monster it's dead his power will duplicate and also his hp. if it's Nightime they will become zombies.
  def __init__(self, name, type = 'monster', dead = False, zombie = False):
    self.name = name 
    self.type = type 
    self.hp = 100
    self.isalive = dead
    self.zombie = zombie
    self.attack = 20
    self.team = {}
    monsters.append(self.name)
  def __repr__(self):
    return '{} it\'s currently hp is {}, his attack is {}'.format(self.name, self.hp, self.attack)
  def zombieform(self):
    if its_day == False:
      self.zombie = True
  def power(self):
    if self.zombie == True:
      self.hp = self.hp *2
      self.attack = self.attack *3
  def ghost (self):
    if self.hp == 0:
      self.type = 'Ghost'
      self.attack = self.attack/2

class HumanFriend:
  # every monster has a human friend. they are a team and they are trying to conquer the world.
  def __init__(self, name, bloodtype, zombie = False):
    self.name = name
    self.blood = bloodtype
    self.zombie = zombie
    self.hp = 50
    self.attack = 10
    self.territory = 0
    humans.append(self.name)
  def __repr__(self):
    return 'This human is called {}, with an {} hp, {} bloodtype, {} attack and {} m2 of territory.'.format(self.name, self.hp, self.blood, self.attack, self.territory)

  def zombieform(self):
    if its_day == False and self.blood != '0':
      self.zombie = True

  def power(self):
    if self.zombie == True:
      self.attack = self.attack*2
      self.hp = self.hp*2
  def territory(self, totalpower):
    True
